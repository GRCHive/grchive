worker_processes 1;

events {
    worker_connections 8192;
}

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    server {
        listen 3000;
        location / {
            proxy_pass http://${MINIKUBE_GITEA_URL};
        }
    }

    server {
        listen 8888;
        location / {
            proxy_pass http://${MINIKUBE_DRONE_URL};
        }
    }

    server {
        listen 8200;
        location / {
            proxy_pass http://${MINIKUBE_VAULT_URL};
        }
    }

    server {
        listen 9999;
        location / {
            proxy_pass http://${MINIKUBE_ARTIFACTORY_URL};
        }
    }

    server {
        listen 9998;
        location / {
            proxy_pass http://${MINIKUBE_ARTIFACTORY_URL_REPO};
        }
    }

}

stream {
    server {
        listen 5432;
        proxy_pass ${MINIKUBE_PSQL_URL};
    }
}
