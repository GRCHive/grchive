apiVersion: apps/v1
kind: Deployment
metadata:
    name: script-runner-deployment
    labels:
        app: script-runner
spec:
    replicas: 1
    selector:
        matchLabels:
            app: script-runner
    template:
        metadata:
            labels:
                app: script-runner
        spec:
            containers:
                - name: script-runner-container
                  image: ${SCRIPT_RUNNER_IMAGE}
                  env:
                    - name: "WORKER_K8S"
                      value: "true"
                    - name: "IMAGE_PULL_SECRET"
                      value: "regcred"
                  resources:
                        requests:
                            cpu: "10m"
                        limits:
                            cpu: "100m"
                  volumeMounts:
                  - mountPath: /opt/certs/rootca
                    name: rootca
                    readOnly: true
                - name: cloudsql-proxy
                  image: gcr.io/cloudsql-docker/gce-proxy:1.16
                  ports:
                    - containerPort: 5432
                  command: ["/cloud_sql_proxy",
                             "-instances=${GRCHIVE_PROJECT}:us-central1:${POSTGRES_INSTANCE_NAME}=tcp:5432",
                             "-credential_file=/secrets/gke/gcloud-service-account.json"]
                  securityContext:
                      runAsUser: 2  # non-root user
                      allowPrivilegeEscalation: false
                  volumeMounts:
                      - name: gke-service-account
                        mountPath: /secrets/gke
                        readOnly: true
                  resources:
                        requests:
                            cpu: "10m"
                        limits:
                            cpu: "100m"
            volumes:
                - name: gke-service-account
                  secret:
                    secretName: gke-service-account
                - name: rootca
                  secret:
                    secretName: rootca
                    defaultMode: 256
            imagePullSecrets:
                - name: regcred
