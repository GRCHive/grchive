apiVersion: apps/v1
kind: Deployment
metadata:
    name: database-query-runner-deployment
    labels:
        app: database-query-runner
spec:
    replicas: 1
    selector:
        matchLabels:
            app: database-query-runner
    template:
        metadata:
            labels:
                app: database-query-runner
        spec:
            containers:
                - name: database-query-runner-container
                  image: ${RUNNER_IMAGE}
                  volumeMounts:
                  - mountPath: /opt/certs/rootca
                    name: rootca
                    readOnly: true
                  - name: query-runner-service-certificate
                    mountPath: /opt/certs/query_runner
                    readOnly: true
                  resources:
                    requests:
                        cpu: "50m"
                    limits:
                        cpu: "100m"
                - name: cloudsql-proxy
                  image: gcr.io/cloudsql-docker/gce-proxy:1.16
                  ports:
                    - containerPort: 5432
                  command: ["/cloud_sql_proxy",
                             "-instances=${GRCHIVE_PROJECT}:us-central1:${POSTGRES_INSTANCE_NAME}=tcp:5432",
                             "-credential_file=/secrets/gke/gcloud-service-account.json"]
                  securityContext:
                      runAsUser: 2  # non-root user
                      allowPrivilegeEscalation: false
                  volumeMounts:
                      - name: gke-service-account
                        mountPath: /secrets/gke
                        readOnly: true
                  resources:
                        requests:
                            cpu: "10m"
                        limits:
                            cpu: "100m"
            volumes:
                - name: gke-service-account
                  secret:
                    secretName: gke-service-account
                - name: rootca
                  secret:
                    secretName: rootca
                    defaultMode: 256
                - name: query-runner-service-certificate
                  secret:
                    secretName: query-runner-service-certificate
                    defaultMode: 256
            imagePullSecrets:
                - name: regcred
