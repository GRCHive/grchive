apiVersion: apps/v1
kind: Deployment
metadata:
    name: webserver-deployment
    labels:
        app: webserver
spec:
    replicas: 1
    selector:
        matchLabels:
            app: webserver
    template:
        metadata:
            labels:
                app: webserver
        spec:
            containers:
                - name: webserver-container
                  image: ${WEBSERVER_IMAGE}
                  ports:
                    - containerPort: 8080
                  readinessProbe:
                    httpGet:
                        path: /healthz
                        port: 8080
                    initialDelaySeconds: 5
                    periodSeconds: 10
                  livenessProbe:
                    httpGet:
                        path: /healthz
                        port: 8080
                    initialDelaySeconds: 15
                    periodSeconds: 20
                - name: nginx-container
                  image: ${NGINX_IMAGE}
                  ports:
                    - containerPort: 443
                  volumeMounts:
                    - name: ssl-certificate
                      mountPath: "/etc/letsencrypt/live/grchive.com"
                      readOnly: true
                  readinessProbe:
                    httpGet:
                        path: /healthz
                        port: 443
                        scheme: HTTPS
                    initialDelaySeconds: 5
                    periodSeconds: 10
                  livenessProbe:
                    httpGet:
                        path: /healthz
                        port: 443
                        scheme: HTTPS
                    initialDelaySeconds: 15
                    periodSeconds: 20
                - name: cloudsql-proxy
                  image: gcr.io/cloudsql-docker/gce-proxy:1.16
                  ports:
                    - containerPort: 5432
                  command: ["/cloud_sql_proxy",
                             "-instances=${GRCHIVE_PROJECT}:us-central1:${POSTGRES_INSTANCE_NAME}=tcp:5432",
                             "-credential_file=/secrets/gke/gcloud-service-account.json"]
                  securityContext:
                      runAsUser: 2  # non-root user
                      allowPrivilegeEscalation: false
                  volumeMounts:
                      - name: gke-service-account
                        mountPath: /secrets/gke
                        readOnly: true
                  resources:
                        requests:
                            cpu: "10m"
                        limits:
                            cpu: "100m"
            volumes:
                - name: gke-service-account
                  secret:
                    secretName: gke-service-account
                - name: ssl-certificate
                  secret:
                    secretName: grchive-cert-prod
            imagePullSecrets:
                - name: regcred
