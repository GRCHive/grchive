apiVersion: v1
kind: PersistentVolumeClaim
metadata:
    name: artifactory-pvc
    namespace: backend
spec:
    accessModes:
        - ReadWriteOnce
    resources:
        requests:
            storage: 5Gi
    storageClassName: expandable-normal

---

apiVersion: apps/v1
kind: Deployment
metadata:
    name: artifactory-deployment
    namespace: backend
    labels:
        app: artifactory
spec:
    replicas: 1
    selector:
        matchLabels:
            app: artifactory
    template:
        metadata:
            labels:
                app: artifactory
        spec:
            containers:
                - name: artifactory-container
                  image: ${ARTIFACTORY_IMAGE}
                  volumeMounts:
                      - name: artifactory-data
                        mountPath: /opt/jfrog/artifactory/var/data/artifactory/filestore
                  resources:
                        requests:
                            cpu: "50m"
                            memory: "2Gi"
                - name: cloudsql-proxy
                  image: gcr.io/cloudsql-docker/gce-proxy:1.16
                  ports:
                    - containerPort: 5432
                  command: ["/cloud_sql_proxy",
                             "-instances=${GRCHIVE_PROJECT}:us-central1:${POSTGRES_INSTANCE_NAME}=tcp:5432",
                             "-credential_file=/secrets/gke/gcloud-service-account.json"]
                  securityContext:
                      runAsUser: 2  # non-root user
                      allowPrivilegeEscalation: false
                  volumeMounts:
                      - name: gke-service-account
                        mountPath: /secrets/gke
                        readOnly: true
                  resources:
                        requests:
                            cpu: "10m"
                        limits:
                            cpu: "100m"
            volumes:
                - name: artifactory-data
                  persistentVolumeClaim:
                      claimName: artifactory-pvc
                - name: gke-service-account
                  secret:
                    secretName: gke-service-account
            imagePullSecrets:
                - name: regcred
    strategy:
        type: Recreate
