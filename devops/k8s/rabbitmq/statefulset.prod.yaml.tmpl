apiVersion: apps/v1
kind: StatefulSet
metadata:
    name: rabbitmq-set
    labels:
        app: rabbitmq
spec:
    selector:
        matchLabels:
            app: rabbitmq
    serviceName: "rabbitmq-service"
    replicas: 1
    template:
        metadata:
            labels:
                app: rabbitmq
        spec:
            containers:
            - name: rabbitmq-container
              image: ${RABBITMQ_IMAGE}
              ports:
              - containerPort: 5672
              volumeMounts:
              - mountPath: /var/lib/rabbitmq
                name: rabbitmq
            imagePullSecrets:
                - name: regcred
    volumeClaimTemplates:
      - metadata:
            name: rabbitmq
        spec:
            accessModes: [ "ReadWriteOnce" ]
            storageClassName: "normal"
            resources:
                requests:
                    storage: 5Gi
