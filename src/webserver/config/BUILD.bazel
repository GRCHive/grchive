package(default_visibility=["//visibility:public"])

genrule(
    name = "config",
    srcs = select({
        "//:production": ["prod.toml.tmpl"],
        "//conditions:default": ["dev.toml.tmpl"],
    }),
    outs = ["config.toml"],
    cmd = ". $(location //build:bash_env) && envsubst < $< > $@",
    tools = [
        "//build:bash_env"
    ]
)
